@model IEnumerable<ABCRetailPOE.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Customer List</h1>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Create">
        <i class="fas fa-user-plus"></i> Create New
    </a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Profile Picture</th>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.First().Address)</th>
            <th class="text-center">Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.CustPhoto" alt="@item.Name" style="width: 80px; height: 80px; object-fit: cover;" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td class="text-center">
                    <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">
                        Details
                    </a>
                    <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                        Edit
                    </a>
                    <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

