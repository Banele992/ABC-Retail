@model ABCRetailPOE.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Product</h2>

<h4>Are you sure you want to delete product?</h4>
<hr />

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Photo URL</dt>
        <dd class="col-sm-10"><img src=@Model.ProductImage alt="@Model.ProductName" /></dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.ProductPrice</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.ProductDescription</dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
