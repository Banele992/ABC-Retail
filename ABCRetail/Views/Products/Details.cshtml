@model ABCRetailPOE.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h2>Product Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Profile Picture</dt>
        <dd class="col-sm-10"><
        img src=@Model.ProductImage alt=@Model.ProductName</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.ProductPrice</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.ProductDescription</dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
